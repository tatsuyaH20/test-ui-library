{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["public"]
	},
	"formatter": {
		"enabled": true,
    "formatWithErrors": true,
		"indentStyle": "space",
    "lineWidth": 120
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
      "indentStyle": "space",
			"quoteStyle": "single",
      "semicolons": "always",
      "lineWidth": 120
		}
	},
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "lineWidth": 120
    },
    "linter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "include": [
        "next.config.mjs",
        "tailwind.config.ts",
        "postcss.config.mjs"
      ]
    }
  ]
}
